<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/btnshiftselect"
        android:weightSum="2">

        <TextView
            android:id="@+id/slashift_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/shiftname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="18 OCT 2018"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/shiftfrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="09:00:00"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/shiftto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="09:00:00"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnshiftselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Shift"/>

</RelativeLayout>